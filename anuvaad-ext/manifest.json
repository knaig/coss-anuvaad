{
    "name": "Anuvaad",
    "description": "Anuvaad",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "./src/anuvaad.html",
        "default_icon": "./asset/anuvaad.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Translates the page"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "options_page": "./src/options.html"
}