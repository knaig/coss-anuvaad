{
    "name": "Anuvaad",
    "description": "Anuvaad Chrome Extension is used for translating web page.",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "./src/anuvaad.html",
        "default_icon": "./asset/anuvaad.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Translates the page"
        }
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ]
}